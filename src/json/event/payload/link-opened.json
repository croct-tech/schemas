{
  "$id": "https://schema.croct.com/json/event/payload/link-opened.json",
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "Link opened event",
  "description": "An event recording that a link was opened.",
  "type": ["object"],
  "additionalProperties": false,
  "required": [
    "type",
    "link"
  ],
  "properties": {
    "type": {
      "description": "The event type identifier.",
      "const": "linkOpened"
    },
    "link": {
      "description": "The URI of the link.",
      "type": ["string"],
      "format": "uri"
    }
  }
}
