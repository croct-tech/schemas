{
  "$id": "https://schema.croct.com/json/event/payload/cart-viewed.json",
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "Cart viewed event",
  "description": "An event recording that a shopping cart was viewed.",
  "type": ["object"],
  "additionalProperties": false,
  "required": [
    "type",
    "cart"
  ],
  "properties": {
    "type": {
      "description": "The event type identifier.",
      "const": "cartViewed"
    },
    "cart": {
      "description": "The shopping cart that was viewed.",
      "$ref": "../model/cart.json"
    }
  }
}
