{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Patch operation",
  "description": "The union of all supported patch operations.",
  "type": "object",
  "properties": {
    "type": {
      "description": "The operation type identifier.",
      "enum": [
        "unset",
        "set",
        "merge",
        "clear",
        "decrement",
        "add",
        "remove",
        "increment",
        "combine"
      ]
    }
  },
  "if": {
    "type": "object",
    "required": ["type"]
  },
  "then": {
    "allOf": [
      {
        "if": {
          "properties": {
            "type": {
              "const": "unset"
            }
          }
        },
        "then": {
          "$ref": "operation/unset.json"
        }
      },
      {
        "if": {
          "properties": {
            "type": {
              "const": "set"
            }
          }
        },
        "then": {
          "$ref": "operation/set.json"
        }
      },
      {
        "if": {
          "properties": {
            "type": {
              "const": "merge"
            }
          }
        },
        "then": {
          "$ref": "operation/merge.json"
        }
      },
      {
        "if": {
          "properties": {
            "type": {
              "const": "clear"
            }
          }
        },
        "then": {
          "$ref": "operation/clear.json"
        }
      },
      {
        "if": {
          "properties": {
            "type": {
              "const": "decrement"
            }
          }
        },
        "then": {
          "$ref": "operation/decrement.json"
        }
      },
      {
        "if": {
          "properties": {
            "type": {
              "const": "increment"
            }
          }
        },
        "then": {
          "$ref": "operation/increment.json"
        }
      },
      {
        "if": {
          "properties": {
            "type": {
              "const": "add"
            }
          }
        },
        "then": {
          "$ref": "operation/add.json"
        }
      },
      {
        "if": {
          "properties": {
            "type": {
              "const": "remove"
            }
          }
        },
        "then": {
          "$ref": "operation/remove.json"
        }
      },
      {
        "if": {
          "properties": {
            "type": {
              "const": "combine"
            }
          }
        },
        "then": {
          "$ref": "operation/combine.json"
        }
      }
    ]
  }
}
