{
  "$id": "https://schema.croct.com/json/template/action/check-dependency.json",
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "Check dependency",
  "description": "Checks if specific dependencies are installed and optionally stores the result in variables.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the action.",
      "const": "check-dependency"
    },
    "dependencies": {
      "type": "array",
      "description": "The list of dependencies to check.",
      "items": {
        "type": "object",
        "description": "A dependency to check.",
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the dependency.",
            "minLength": 1,
            "examples": [
              "croct",
              "react"
            ]
          },
          "version": {
            "type": "string",
            "description": "The required version of the dependency. If not specified, any version is accepted.",
            "minLength": 1,
            "examples": [
              "1.0.0",
              "^1.0.0",
              ">=2.0.0"
            ]
          },
          "optional": {
            "type": "boolean",
            "description": "Whether the dependency is optional. Optional dependencies do not cause the action to fail even if not satisfied.",
            "default": false
          }
        },
        "required": [
          "name"
        ],
        "additionalProperties": false
      },
      "uniqueItems": true,
      "minItems": 1
    },
    "help": {
      "type": "object",
      "description": "Help message and resources to guide resolution.",
      "properties": {
        "message": {
          "type": "string",
          "description": "A help message with guidance for resolving issues. Supports basic Markdown formatting such as italics, bold, and links.",
          "minLength": 1
        },
        "links": {
          "type": "array",
          "description": "Helpful links for resolving dependency issues.",
          "items": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "format": "uri",
                "pattern": "^https?://",
                "description": "The URL of the help resource."
              },
              "label": {
                "type": "string",
                "description": "A label for the help link.",
                "minLength": 1
              }
            },
            "required": [
              "url",
              "label"
            ],
            "additionalProperties": false
          },
          "uniqueItems": true,
          "examples": [
            [
              {
                "label": "Documentation",
                "url": "https://docs.example.com/configuration"
              }
            ]
          ]
        },
        "suggestions": {
          "type": "array",
          "description": "Suggested actions to fix missing dependencies. Supports basic Markdown formatting such as italics, bold, and links.",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "uniqueItems": true
        }
      },
      "additionalProperties": false
    },
    "result": {
      "type": "object",
      "description": "Maps each dependency to a variable that stores whether it's satisfied. Listed dependencies do not fail the action.",
      "additionalProperties": {
        "type": "string",
        "description": "The variable name to store the result of the dependency check.",
        "minLength": 1,
        "examples": [
          "variable",
          "result"
        ]
      },
      "propertyNames": {
        "type": "string",
        "description": "The name of the dependency.",
        "minLength": 1,
        "examples": [
          "croct",
          "react"
        ]
      }
    }
  },
  "required": [
    "name",
    "dependencies"
  ],
  "additionalProperties": false
}
