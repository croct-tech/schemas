{
  "$id": "https://schema.croct.com/json/template/action/stop-server.json",
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "Stop server",
  "description": "Stops the project's development server if it was started by the current process.",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "name": {
      "type": "string",
      "description": "The name of the action.",
      "const": "stop-server"
    },
    "id": {
      "type": "string",
      "description": "The ID of the server to stop",
      "minLength": 1,
      "examples": [
        "3ce62058-9fc5-4cf6-8b5f-97219fcb9131"
      ]
    }
  },
  "required": [
    "name",
    "id"
  ],
  "additionalProperties": false,
  "examples": [
    {
      "name": "stop-server",
      "id": "3ce62058-9fc5-4cf6-8b5f-97219fcb9131"
    }
  ]
}
