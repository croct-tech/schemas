{
  "$id": "https://schema.croct.com/json/template/catalog-template.json",
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "Catalog template",
  "description": "A template listed in the catalog.",
  "type": "object",
  "properties": {
    "metadata": {
      "description": "Metadata of templates listed in the catalog.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The ID of the template in the catalog.",
          "minLength": 1,
          "pattern": "^[a-z0-9-]+\/[a-z0-9-]+\/[a-z0-9-]+$"
        },
        "verified": {
          "type": "boolean",
          "description": "Whether the template is verified by Croct."
        },
        "documentationUrl": {
          "type": "string",
          "description": "The URL of the documentation.",
          "format": "uri",
          "pattern": "^https://",
          "minLength": 1
        },
        "sourceUrl": {
          "type": "string",
          "description": "The URL of the template source code.",
          "format": "uri",
          "pattern": "^https://",
          "minLength": 1
        },
        "demoUrl": {
          "type": "string",
          "description": "The URL of the demo page.",
          "format": "uri",
          "pattern": "^https://",
          "minLength": 0
        },
        "deployUrl": {
          "type": "string",
          "description": "The URL to deploy the template.",
          "format": "uri",
          "pattern": "^https://",
          "minLength": 0
        },
        "coverImageUrl": {
          "type": "string",
          "description": "The URL of the cover image.",
          "format": "uri",
          "pattern": "^https://",
          "minLength": 1
        },
        "coverVideoUrl": {
          "type": "string",
          "description": "The URL of the cover video.",
          "format": "uri",
          "pattern": "^https://",
          "minLength": 0
        },
        "installationUrl": {
          "type": "string",
          "description": "The URL used to install the template via CLI.",
          "format": "uri",
          "minLength": 1
        },
        "categories": {
          "type": "array",
          "description": "The categories of the template.",
          "items": {
            "type": "string",
            "description": "The ID of the category.",
            "minLength": 1,
            "pattern": "^[a-z0-9-]+/[a-z0-9-]+$"
          },
          "minItems": 1
        },
        "relatedTemplates": {
          "type": "array",
          "description": "The IDs of the related templates.",
          "items": {
            "type": "string",
            "description": "The ID of the related template.",
            "minLength": 1,
            "pattern": "^[a-z0-9-]+/[a-z0-9-]+/[a-z0-9-]+$"
          }
        },
        "author": {
          "type": "object",
          "description": "The author of the template.",
          "properties": {
            "name": {
              "type": "string",
              "description": "The name of the author.",
              "minLength": 1
            },
            "avatarUrl": {
              "type": "string",
              "description": "The URL of the author's avatar.",
              "format": "uri",
              "pattern": "^https://",
              "minLength": 1
            },
            "websiteUrl": {
              "type": "string",
              "description": "The URL of the author's website.",
              "format": "uri",
              "pattern": "^https://",
              "minLength": 1
            }
          },
          "required": [
            "name",
            "avatarUrl",
            "websiteUrl"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "author",
        "sourceUrl",
        "coverImageUrl",
        "installationUrl",
        "categories",
        "documentationUrl"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "metadata"
  ]
}
